{
    "name": "socket-server",
    "version": "1.0.0",
    "description": "Socket.IO middleware service for real-time communication",
    "main": "dist/server/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:integration": "jest --config=jest.integration.config.js",
        "test:load": "jest --config=jest.load.config.js",
        "test:security": "jest --config=jest.security.config.js",
        "test:all": "npm run test && npm run test:integration && npm run test:security",
        "dashboard": "cd dashboard && next dev"
    },
    "keywords": [
        "socket.io",
        "middleware",
        "real-time",
        "websocket"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@socket.io/redis-adapter": "^8.2.1",
        "axios": "^1.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.2.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "pino": "^8.16.2",
        "pino-pretty": "^10.2.3",
        "pino-roll": "^1.0.0",
        "prom-client": "^15.0.0",
        "redis": "^4.6.11",
        "sanitize-html": "^2.17.0",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^29.5.10",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.19.9",
        "@types/sanitize-html": "^2.16.0",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "socket.io-client": "^4.7.2",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}
