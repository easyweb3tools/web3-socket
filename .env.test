# Test Environment Configuration
TEST_PORT=8081
NODE_ENV=test
LOG_LEVEL=error

# Socket.IO Configuration
SOCKET_PATH=/socket.io
CORS_ORIGIN=*
SOCKET_PING_TIMEOUT=1000
SOCKET_PING_INTERVAL=2000

# Authentication
JWT_SECRET=test_jwt_secret
API_KEY=test_api_key

# Redis Configuration (disabled for tests)
REDIS_ENABLED=false

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Performance Configuration
EVENT_LOOP_CHECK_INTERVAL=5000
EVENT_LOOP_HIGH_LAG_THRESHOLD=100
EVENT_LOOP_CRITICAL_LAG_THRESHOLD=500
EVENT_LOOP_AUTO_OPTIMIZATION=true
MESSAGE_BATCH_SIZE=100
MESSAGE_BATCH_DELAY=50
MESSAGE_BATCH_MAX_PAYLOAD=1048576
MESSAGE_BATCH_COMPRESSION=true