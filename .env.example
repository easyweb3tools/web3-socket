# Server Configuration
PORT=8081
NODE_ENV=development
LOG_LEVEL=info

# Socket.IO Configuration
SOCKET_PATH=/socket.io
CORS_ORIGIN=*
SOCKET_PING_TIMEOUT=10000
SOCKET_PING_INTERVAL=25000

# Authentication
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here

# Redis Configuration (for scaling)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=socket.io
REDIS_URL=
REDIS_TLS=false
REDIS_STATE_SHARING=true
REDIS_STATE_TTL=86400
REDIS_STATE_SYNC_INTERVAL=30000

# Instance Configuration (for horizontal scaling)
INSTANCE_ID=
INSTANCE_GROUP=default
ENABLE_LOAD_BALANCING=true
MAX_CONNECTIONS_PER_INSTANCE=10000
REPORT_INSTANCE_LOAD=true
LOAD_REPORT_INTERVAL=10000

# Backend Service Configuration
BACKEND_URL=http://localhost:8080
BACKEND_TIMEOUT_MS=5000
BACKEND_MAX_RETRIES=3
BACKEND_INITIAL_DELAY_MS=100
BACKEND_USE_DISTRIBUTED_RETRIES=true

# Performance Optimization Configuration
EVENT_LOOP_CHECK_INTERVAL=5000
EVENT_LOOP_HIGH_LAG_THRESHOLD=100
EVENT_LOOP_CRITICAL_LAG_THRESHOLD=500
EVENT_LOOP_AUTO_OPTIMIZATION=true
MESSAGE_BATCH_SIZE=100
MESSAGE_BATCH_DELAY=50
MESSAGE_BATCH_MAX_PAYLOAD=1048576
MESSAGE_BATCH_COMPRESSION=true
BACKEND_CONNECTION_POOL_SIZE=100
BACKEND_CONNECTION_KEEP_ALIVE=true

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000

# Logging
LOG_TO_FILE=true
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090